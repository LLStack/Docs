/* Windows-friendly typography and UI tweaks */

html, body
  font-family 'Segoe UI', 'Microsoft YaHei', 'Noto Sans CJK SC', 'Source Han Sans SC', 'PingFang SC', 'Hiragino Sans GB', 'Helvetica Neue', Arial, sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

/* Code font stack: prefer Consolas on Windows */
pre, code, kbd, samp, .content pre, .content code
  font-family Consolas, 'Courier New', Menlo, Monaco, 'Source Code Pro', monospace

/* Slightly increase line-height for better rendering on Windows */
.content
  line-height 1.75

/* Adjust navbar and sidebar spacing for Windows system metrics */
.navbar
  height 3.25rem

.sidebar
  font-size 15px

/* Improve contrast for links against Windows default rendering */
a
  color #0067C0
  &:hover
    color #005aab

/* Friend links grid on home page */
.friendlinks-wrapper
  margin-top 2.5rem
  h3
    margin 0 0 1rem
  .friend-links
    list-style none
    padding 0
    margin 0
    display grid
    grid-template-columns repeat(auto-fit, minmax(180px, 1fr))
    grid-gap 12px
    li
      margin 0
    a
      display block
      padding 8px 10px
      border 1px solid $borderColor
      border-radius 6px
      background #fff
      text-decoration none
      color #0366d6
      &:hover
        border-color $accentColor
        color #005aab
